




@model IEnumerable<CarRentByYassirRchi.Models.Voitures>

@{
    ViewBag.Title = "Voitures";
}

<h2>Voitures</h2>
<p>
    @Html.ActionLink("Create New", "AjouterVoiture")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Marque)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categorie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Serie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Immatriculaion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateMC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Carburant)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrixJ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dispo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Marque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categorie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Serie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Immatriculaion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateMC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carburant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrixJ)
            </td>
            <td>
               
                <img src="~/Images/Voitures/@Url.Content(item.Dispo)" width="80" height="50"/>
            </td>
            <td>
                @Html.ActionLink("Edit", "EditVoiture", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteVoiture", new { id = item.Id })
            </td>
        </tr>
    }

</table>
